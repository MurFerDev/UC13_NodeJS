<h1 class="text-center my-4">Cadastro de Cliente</h1>
 
<div class="container" style="max-width: 900px;">
  <form action="/clientes/cadastrar" method="POST">
    <div class="row">
      
      <div class="col-md-6 border-right pr-4">
        <h4 class="mb-3">🧑 Dados do Cliente</h4>
 
        <div class="form-group">
          <label for="nome">Nome completo:</label>
          <input class="form-control" type="text" name="nome" required>
        </div>
 
        <div class="form-group">
          <label for="endereco">Endereço:</label>
          <input class="form-control" type="text" name="endereco" required>
        </div>
      </div>    
 
      <!-- Coluna: Dados do Usuário -->
      <div class="col-md-6 pl-4">
        <h4 class="mb-3">🔐 Dados de Acesso</h4>
 
        <div class="form-group">
          <label for="email">E-mail (Login):</label>
          <input class="form-control" type="email" name="email" required>
        </div>
 
        <div class="form-group">
          <label for="senha">Senha:</label>
          <input class="form-control" type="password" name="senha" required>
        </div>
      </div>
 
    </div>
 
    <div class="text-center mt-4">
      <button class="btn btn-primary px-5" type="submit">Cadastrar</button>
    </div>
  </form>
</div>